<% @page_title = "USA DNA Testing Locations" %>
<% @page_description = "New Description" %>

<div class="all-states">
	<div class="newlist">
		<div class="cont">
			<h1><%= @page_title %></h1>
			<hr class="hlf">
			<p>USA DNA Testing offers affordable DNA/Paternity Testing in over 2,500 locations nationwide. Each location is certified and accredited by the AABB and ISO 17025</p>
			<hr class="hlf">
			<h2>Select a state to find a location near you.</h2>
			<br>
			<div class="states-dd">
				<div class="dropdown">
				  <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
				    Choose a State <i class="fa fa-angle-down"></i>
				  </button>

				  <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
						<% for state in @states %>
						 	<%= link_to state_path(state), class: 'dropdown-item' do %>
						 		<%= image_tag("seals/#{state.name.upcase}.png", class: 'state-icons', alt: 'USA DNA Testing - state icons') %>
								<%= state.name %>
						 	<% end %>
					  <% end %>
				  </div>
				</div>
			</div>
		</div>
	</div>

	<div class="opt-block">
		<div class="inner">
			<div class="two"><%= image_tag('test-icon2a.png', alt: 'USA DNA Testing, painless swab DNA testing') %></div>
			<div class="one">
				<p>Follow the link below to learn more about each of our DNA/Paternity testing options, and schedule your testing appointment online. </p>
				<div class="clearfix"></div>
				<div class="test-row"><%= link_to "Learn More", options_path, class: 'tests' %></div>
			</div>
		</div>
	</div>
