<% @page_title = "Dna Testing in #{@town.townname} #{@state.abv}" %>

<div class="all-towns">

	<div class="full pop">
		<div class="one">
	  	<h1>USA DNA Testing in <span><%= @town.townname %>, <%= @state.abv %></span></h1>
		  <%= render 'shared/dna-text' %>
		</div>

		<div class="location-map">
			<div class="map-hlf">
				<%= render 'shared/map' %>
			</div>

  		<div class="town-hlf">
				<div class="search-sec">
					<div class="searcher">
						<%= form_with(url: locations_path, class: "form-inline", local: true, method: :get) do |f| %>
						  <%= f.text_field :near, class: "form-control", placeholder: "Search" %>
						  <%= f.submit "", class: "btn btn-outline-secondary search" %>
						<% end %>
					</div>
				</div>

				<div class="loclist">
					<% if @town_locations.count != 0 %>
						<table class="locations">
							<% @town_locations.each do |location| %>
								<div class="townlisting-bx">
									<h4>
										<%= location.street.titleize %><br>
										<% if location.street2 %><%= location.street2.titleize %><br><% end %>
										<%= location.town.townname %>, <%= location.state.abv %> <%= location.zip %>
										<br>
										<a href="tel:8662125426" id="number_link" onclick="ga('send', 'event', 'Phone Number', 'Clicked to Call', 'Number on Website', '1');">1 (866) 212-5426</a>
										<!-- <br><small>ID: <%= location.id %> &nbsp; | &nbsp; <%= link_to("Edit Location", edit_location_path(location)) %></small> -->
									</h4>
								</div>
				  		<% end %>
						</table>
						<% else %>
						<p>Locations are added regularly. Please check back soon! <b><%= link_to "Click here", new_charge_path %></b> to order an At Home DNA Test Kit!</p>
					<% end %>
				</div>
			</div>

		</div>
	</div>
</div>
